{
  "parser": "@typescript-eslint/parser",
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "rules": {
    "no-unused-vars": ["error", { "varsIgnorePattern": "^_" }],
    "curly": "error"
  },
  "ignorePatterns": ["/dist/**", "*.css", "*.svelte"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "Bun": false
  }
}
